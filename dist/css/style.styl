@import 'normalize.css';
@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700&subset=latin-ext');


$c-theme = rgba(70, 200, 240, 1);
$c-text  = rgba(70,  70,  70, 1);

body {
  font-family: 'Montserrat', sans-serif;
  font-size: 14px;
  line-height: 20px;
  box-sizing: border-box;
  overflow-x: hidden;
}


.ar-signup {
  width: 100vw;
  min-width: 100vw;
  min-height: 100vh;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background-color: silver;
  background-image: linear-gradient(to bottom, rgba(40, 40, 40, .3), rgba(40, 40, 40, .3)), url('../../static/background_2.jpg');
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;


  &__box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    &>* {
      margin-bottom: 32px;
    }

    .ar-button {
      min-width: 320px;
    }

    input {
      height: 50px;
      line-height: 50px;
      border: none;
      border-radius: 5px;
      //padding: 0 10px;
      min-width: 320px;
      text-align: center;
      background: rgba(255, 255, 255, .2);
      color: white;
      font-size: 110%;

      &::placeholder {
        color: rgba(255, 255, 255, .4);
      }
    }

  }
}

.ar-button {
  text-align: center;
  background-color: $c-theme;
  height: 50px;
  line-height: 50px;
  //padding: 0 32px;
  border-radius: 8px;
  text-transform: uppercase;
  color: white;
  box-shadow: 0 10px 32px -8px alpha($c-theme, .75);
  cursor: pointer;
  transition: ease-in-out .2s all;
  font-size: 110%;

  &:hover {
    background-color: darken($c-theme, 10);
  }

  &._additional {
    background-color: white;
    color: $c-text;
    margin-top: 40px;


    &:hover {
      background-color: darken(white, 10);
    }
  }
}

.ar-header {
  color: white;
  text-align: center;
  margin-bottom: 100px;

  h1 {
    font-size: 460%;
    letter-spacing: 2px;
    span {
      color: $c-theme;
    }
  }

  h2 {
    font-size: 200%;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-weight: 400;
    opacity: .5;
  }
}


.ar-dashboard {
  min-height: 100vh;
}

.ar-layout__header {

  padding: 30px calc(50% - (1280px) / 2);
  max-width: 100vw;
  overflow: hidden;


  //height: 80px;
  box-shadow: 0 10px 16px -8px rgba(0, 0, 0, .1);

  h1 {
    margin: 0;
    margin-top: 5px;
    margin-bottom: 5px;
    font-size: 180%;
    letter-spacing: 2px;

    span {
      color: $c-theme;
    }
  }

  h2 {
    margin: 0;
    font-size: 90%;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-weight: 600;
    opacity: .5;
  }
}

.ar-process {

  padding: 20px calc(50% - (1280px) / 2) 40px;
  max-width: 100vw;
  overflow: hidden;


  background-color: alpha($c-theme, .1);

  &>header {
    margin: 0;
    font-size: 100%;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-weight: 600;
    opacity: .5;
    margin-top: 20px;
    margin-bottom: 20px;
  }


}

.ar-new {
  padding: 20px calc(50% - (1280px) / 2);
  max-width: 100vw;
  overflow: hidden;

  &>header {

    border-bottom: 1px solid rgba(0, 0, 0, .1);
    padding-bottom: 40px;

    header {
      margin: 0;
      font-size: 110%;
      letter-spacing: 1px;
      text-transform: uppercase;
      font-weight: 600;
      opacity: 1;
      margin-top: 20px;
      margin-bottom: 20px;
    }

    p {
      max-width: 320px;
      opacity: .75;
      font-weight: 500;
      font-size: 100%;
    }
  }
}


.ar-dropzones {
  margin: 40px 0;
  display: flex;
  justify-content: space-between;

  &>* {
    flex-basis: calc(100% / 3 - 40px);
  }
}

.ar-dropzone {
  min-height: 320px;

  background-color: alpha($c-theme, .05);
  border: 4px dashed alpha($c-theme, .25);
  border-radius: 8px;
  background-image: url('../../static/csv.svg'), linear-gradient(to bottom, alpha($c-theme, .05), alpha($c-theme, .05));
  background-position: center 35%;
  background-repeat: no-repeat;
  background-size: 60px, cover;
  position: relative;
  margin-top: 140px;
  background-blend-mode: overlay;


  &__button {
    height: 40px;
    line-height: 40px;
    position: absolute;
    left: 50%;
    top: 75%;
    transform: translateX(-50%);

    border: 3px solid alpha($c-theme, .25);
    padding: 0 32px;
    border-radius: 8px;

    letter-spacing: 1px;
    text-transform: uppercase;
    color: darken($c-theme, 20);
    font-weight: 600;

    cursor: pointer;
  }


  &__description {
    h3 {
      margin: 0;
      font-size: 100%;
      letter-spacing: 1px;
      text-transform: uppercase;
      font-weight: 600;
      opacity: 1;
      margin-bottom: 10px;
    }

    p {
      opacity: .75;
      font-size: 95%;
    }

    text-align: center;
    padding: 0 50px;
    position: absolute;
    top: -20px;
    left: 0;
    widht: 100%;

    transform: translateY(-100%);
  }


  &._2 {
    background-image: url('../../static/csv.svg'), linear-gradient(to bottom, saturation(hue(alpha($c-theme, .05), 0deg), 80), saturation(hue(alpha($c-theme, .05), 0deg), 80));
    border-color: saturation(hue(alpha($c-theme, .25), 0deg), 70);

    .ar-dropzone__button {
      border: 3px solid saturation(hue(alpha($c-theme, .25), 0deg), 40);
      color: saturation(hue(darken($c-theme, 10), 0deg), 40);
    }
  }

  &._3 {
    background-image: url('../../static/csv.svg'), linear-gradient(to bottom, saturation(hue(alpha($c-theme, .05), 120deg), 50), saturation(hue(alpha($c-theme, .05), 120deg), 50));
    border-color: saturation(hue(alpha($c-theme, .25), 120deg), 50);

    .ar-dropzone__button {
      border: 3px solid hue(alpha($c-theme, .25), 120deg);
      color: hue(darken($c-theme, 20), 120deg);
    }
  }
}


.ar-projects {
  display: flex;

  &>* {
    flex-basis: 25%;
    margin-right: 20px;
  }

}

.ar-project {
  box-shadow: 0 10px 64px -8px rgba(0, 0, 0, .1);
  padding: 20px;
  background-color: rgba(255, 255, 255, 1);
  border-radius: 5px;
  //max-width: 25%;

  header {
    margin: 0;
    font-size: 120%;
    letter-spacing: 1px;
    text-transform: uppercase;
    font-weight: 600;
    opacity: 1;
    margin-bottom: 5px;
  }

  &__time {
    opacity: .25;
    font-weight: 600;
    font-size: 90%;
  }

  &__status {
    font-weight: 600;
    font-size: 90%;
    opacity: .75;

    span {
      opacity: .35;
    }
  }

  .ar-progressBar {
    background-color: rgba(0, 0, 0, .05);
    padding: 5px 20px 5px 5px;
    height: 40px;
    line-height: 40px;
    margin: 10px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 5px;

    &__percent {
      background-color: white;
      padding: 0 10px;
      border-radius: 4px;
      display: block;
      font-weight: 600;
      flex-basis: 40px;
      margin-right: 20px;
    }

    &__candy {
      background-color: rgba(255, 255, 255, 1);
      flex-basis: calc(100% - 60px);
      height: 20px;
      border-radius: 14px;
      border: 4px alpha($c-theme, .45) solid;
      box-shadow: inset 0 10px 16px rgba(0, 0, 0, .2);
      overflow: hidden;
      position: relative;

      &Bar {
        position: absolute;
        min-width: 120px;
        height: 100%;
        box-shadow: 20px 0 32px -5px rgba(124, 229, 149, 1);
        background-color: rgba(124, 229, 149, 1);
        background-image: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23000000' fill-opacity='0.08' fill-rule='evenodd'%3E%3Cpath d='M0 40L40 0H20L0 20M40 40V20L20 40'/%3E%3C/g%3E%3C/svg%3E"), linear-gradient(to top, rgba(0,0,0,.15) 0%,rgba(255,255,255,0) 50%,rgba(255,255,255,.5) 80%,rgba(255,255,255,0) 100%);;

        &:after {
          content: '';
          position: absolute;
          right: 0;
          top: 50%;
          width: 20px;
          height: 100%;
          background-color: saturation(darken(rgba(124, 229, 149, 1), 14), 40);
          border-radius: 100%;
          transform: translateX(50%) translateY(-50%) scale(0.35, 1);
        }

        &._problem {
          background-color: rgba(229, 124, 149, 1);

          &:after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            width: 20px;
            height: 100%;
            background-color: saturation(darken(rgba(229, 124, 149, 1), 10), 40);
            border-radius: 100%;
            transform: translateX(50%) translateY(-50%) scale(0.35, 1);
          }
        }
      }
    }
  }
}